{
  "rules": [
    {
      "name": "Allow AVOT auto-merge for scrolls",
      "conditions": {
        "title": [
          "^Sovereign Architecture v[0-9]+\\.[0-9]+$"
        ],
        "labels": [
          "autogenerated",
          "guardian-approved"
        ],
        "changed_files": {
          "allowed_paths": [
            "docs/",
            "sovereign_architecture/"
          ]
        }
      },
      "actions": {
        "auto_merge": true
      }
    }
  ]
}
